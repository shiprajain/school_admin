<h1> Classrooms</h1>

<table id="classroom">
<% @classrooms.each do |classroom| %>  
  <tr>
    <td><%= classroom.name %></td>
    <td><%= button_to "Show Details", classroom_path(classroom.id), method: :get%></td>
    <td><%= button_to "Delete School", classroom_path(classroom.id), method: :delete, data: {confirm: 'Are you sure?'}%></td>
  </tr>
  <% end -%>

  </table>

  <br/>

<%= button_to "Add New Classroom", new_classroom_path, method: :get%>